pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "wordpress-app"
        AWS_REGION = "ap-south-1"
        S3_BUCKET = "my-wordpress-deployments"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/tiwarivive/wordpresssigma.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker-compose build'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    sh 'docker-compose up -d'
                    sh 'chmod +x ./run-tests.sh' // Ensure script is executable
                    sh './run-tests.sh'
                }
            }
        }
        stage('Deploy CloudFormation') {
            steps {
                script {
                    sh """
                    aws cloudformation deploy \
                        --template-file ./cloudformation-template.yaml \
                        --stack-name wordpress-docker-stack \
                        --region ${AWS_REGION}
                    """
                }
            }
        }
        stage('Upload Artifacts to S3') {
            steps {
                script {
                    sh """
                    zip -r wordpress-artifacts.zip wordpress/
                    aws s3 cp wordpress-artifacts.zip s3://${S3_BUCKET}/
                    """
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker-compose down'
                echo 'Cleaned up Docker containers.'
            }
        }
    }
}
